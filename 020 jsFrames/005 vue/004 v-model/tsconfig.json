{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "strict": true,
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictFunctionTypes": false,
        "removeComments": true,
        "noImplicitAny": true,
        "isolatedModules": true
    }
}