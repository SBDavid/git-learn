{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
    ],
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "test/index.test.ts"
  ],
  "exclude": [
    "test/**/*"
  ]
}